{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "Views/*": [
        "src/views/*"
      ],
      "Hooks/*": [
        "src/hooks/*"
      ],
      "Contexts/*": [
        "src/contexts/*"
      ],
      "Utils/*": [
        "src/utils/*"
      ],
      "ABIs/*": [
        "src/ABIs/*"
      ],
      "Config/*": [
        "config/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
